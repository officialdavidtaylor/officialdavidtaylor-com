---
import 'styles/global.css';

import Navbar from 'components/Navbar.astro';
import Footer from 'components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

const currentRoute = Astro.request.url;
const route = new URL(currentRoute);

const isHomeRoute = route.pathname === '/';
const routeName = route.pathname.split('/')[1];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {
      isHomeRoute ? (
        <link rel="icon" type="image/ico" href="/favicon/home.ico" />
      ) : (
        <>
          <link
            rel="icon"
            type="image/png"
            href={`/favicon/${routeName}/favicon-96x96.png`}
            sizes="96x96"
          />
          <link
            rel="shortcut icon"
            href={`/favicon/${routeName}/favicon.ico`}
          />
          <link
            rel="apple-touch-icon"
            sizes="180x180"
            href={`/favicon/${routeName}/apple-touch-icon.png`}
          />
          <meta name="apple-mobile-web-app-title" content="why " />
          <link
            rel="manifest"
            href={`/favicon/${routeName}/site.webmanifest`}
          />
        </>
      )
    }
  </head>
  <body class="flex h-full min-h-dvh w-full flex-col">
    <Navbar />
    <div class="mx-auto w-full max-w-screen-lg px-4 xl:px-0">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
